@page
@model EasyMessenger.Pages.account.LoginModel
@{
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-4">
            <div class="card shadow-sm">
                <div class="card-header text-center bg-primary text-white">
                    <h4>Вход</h4>
                </div>
                <div class="card-body">
                    <form method="post">
                        <div class="text-denger" asp-validation-summary="ModelOnly"></div>
                        <div class="mb-3">
                            <label for="username" class="form-label">Имя пользователя</label>
                            <input asp-for="Credential.UserName" type="text" class="form-control" id="username" name="Username" placeholder="Введите имя" required>
                            <span class="text-denger" asp-validation-for="Credential.UserName"></span>
                        </div>
                        <div class="mb-3">
                            <label for="password" class="form-label">Пароль</label>
                            <input asp-for="Credential.Password" type="password" class="form-control" id="password" name="Password" placeholder="Введите пароль" required>
                            <span class="text-denger" asp-validation-for="Credential.Password"></span>
                        </div>
                        <div class="d-grid">
                            <button type="submit" class="btn btn-primary">Войти</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>